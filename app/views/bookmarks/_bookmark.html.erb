<%= content_tag :div, class:"col-lg-3 col-md-4 col-sm-12 text-xs-left", id:"bookmark-#{bookmark.id}" do %>
  <div class="card">
    <% if policy(bookmark).edit? %>
      <%= render partial: "bookmarks/function", locals:{bookmark: bookmark} %>
    <% end %>
    <div class="card-block">
      <h5 class="card-title"><%= link_to bookmark.title, [bookmark.topic, bookmark] %></h5>
      <h6 class="card-subtitle text-muted"><%= bookmark.topic.title %></h6>
    </div>
    <%= image_tag bookmark.thumbnail, size: "150x150",class:"card-img-top img-fluid center-block" %>
    <div class="card-block">
      <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>
      <%= link_to "Link", bookmark.url, class: "btn btn-primary-outline btn-sm" %>
      <div><small class="text-muted"><%= "Added #{time_ago_in_words(bookmark.created_at)} ago" %></small></div>
    </div>
  </div>
<% end %>