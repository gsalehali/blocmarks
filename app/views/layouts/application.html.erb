<!DOCTYPE html>
<html>
  <head>
    <title>Blocmarks</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav id="topNav" class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <ul class="nav navbar-nav pull-xs-right user-info">
          <% if current_user %>
            <li class="dropdown pull-right">
              <button href="#" data-toggle="dropdown" class="dropdown-toggle btn btn-sm btn-primary-outline"><span class="fa fa-user"></span></button>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "Log out", destroy_user_session_path, method: :delete %>
                  </li>
                </ul>
            </li>
            <div class="pull-right">
              Hello <%= current_user.email %>!
            </div>
          <% else %>
           <div class="pull-right">
               <%= link_to "Sign in", new_user_session_path %> or
               <%= link_to "Sign up", new_user_registration_path %>
           </div>
          <% end %>
        </ul>

        <button class="navbar-toggler hidden-md-up pull-left collapsed" type="button" data-toggle="collapse" data-target="#collapsingNavbar" aria-expanded="false">
            â˜°
        </button>
        <a class="navbar-brand" href="#first"><span class="fa fa-bookmark"></span>Blocmarks</a>
        <div class="navbar-toggleable-sm collapse" id="collapsingNavbar" aria-expanded="false" style="height: 0px;">
          <ul class="nav navbar-nav">
            <li class="nav-item">
              <%= link_to "Home", root_path, html_options = {class: "nav-link"} %>
            </li>
            <li class="nav-item">
              <%= link_to "Topics", topics_path, html_options = {class: "nav-link"} %>
            </li>
            <li class="nav-item">
              <%= link_to "About", about_path, html_options = {class: "nav-link"} %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="inner-body">
      <div class="body-content <%= add_css(controller)%>">
        <div class="inner">
          <div class="<%= "text-xs-left" if controller.class.to_s.downcase.exclude?("welcome") %>">
            <% if flash[:notice] %>
              <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <%= flash[:notice] %>
              </div>
            <% elsif flash[:error] %>
              <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <%= flash[:error] %>
              </div>
            <% elsif flash[:alert] %>
              <div class="alert alert-warning">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <%= flash[:alert] %>
              </div>
            <% end %>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
